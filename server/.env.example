# Server Environment Variables

# MongoDB
MONGODB_URI=mongodb://localhost:27017/hypnotherapist

# Server
PORT=5000
NODE_ENV=development

# Client URL
CLIENT_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Stripe (get from stripe.com)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (get from developer.paypal.com)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email (SendGrid or SMTP)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@hypnotherapist.ie

# Google Cloud Storage (for file storage)
GCS_PROJECT_ID=your_gcp_project_id
GCS_BUCKET_NAME=hypnotherapist-products
GCS_KEY_FILE=./config/gcp-service-account-key.json

# Admin
ADMIN_EMAIL=admin@hypnotherapist.ie
ADMIN_PASSWORD=change-this-password
